<odoo>
    <record id="ir_cron_daily_crm_excel_report" model="ir.cron">
        <field name="name">Daily CRM Excel Report</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">model._generate_and_send_report('Daily')</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
    <record id="ir_cron_weekly_crm_excel_report" model="ir.cron">
        <field name="name">Weekly CRM Excel Report</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">model._generate_and_send_report('Weekly')</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="active">True</field>
    </record>
</odoo>
