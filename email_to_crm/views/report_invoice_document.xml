<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//th[span[text()='Amount']]" position="before">
            <th class="text-end"><span>MRP</span></th>
        </xpath>
        <xpath expr="//td[@name='td_subtotal']" position="before">
            <td name="lst_price" class="text-end o_price_total">
                <span class="text-nowrap" t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="line.product_id.lst_price"></span>
            </td>
        </xpath>
        <xpath expr="//div[hasclass('invoice_main')]" position="after">
            <p><strong>Phone Number:</strong> <span t-esc="o.phone_number"/></p>
        </xpath>
    </template>
</odoo>