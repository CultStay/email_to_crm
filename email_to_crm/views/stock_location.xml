<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>
        <record id="inherit_stock_location_form_view" model="ir.ui.view">
            <field name="name">stock.location.view</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//field[@name='storage_category_id']" position="after">
                    <field name="is_allowed_sales"/>
                </xpath>
            </field>
        </record>
        <record id="stock_picking_form_inherit_1" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//field[@name='location_id'][2]" position="attributes">
                    <attribute name="domain">[('is_allowed_sales', '=', True)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
