<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_check_in_crm_leads" model="ir.actions.act_window">
        <field name="name">Today's Check-in</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">list,form</field>
        <field name="domain">['&amp;',('check_in', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('check_in', '&lt;=', (context_today() + datetime.timedelta()).strftime('%Y-%m-%d'))]</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_checkin_today"
        name="Today's Check-in"
        sequence="10"
        groups="email_to_crm.group_cult_stay_user"
        action="action_check_in_crm_leads"
        web_icon="email_to_crm,static/description/check_in.png"
        />
    <record id="action_check_out_crm_leads" model="ir.actions.act_window">
        <field name="name">Today's Check-out</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">list,form</field>
        <field name="domain">['&amp;',('check_out', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('check_out', '&lt;=', (context_today() + datetime.timedelta()).strftime('%Y-%m-%d'))]</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_check_out_today"
        name="Today's Check-out"
        sequence="11"
        groups="email_to_crm.group_cult_stay_user"
        action="action_check_out_crm_leads"
        web_icon="email_to_crm,static/description/check-out.png"
        />

    <!-- Inherit the Sales Root Menu -->
    <record id="sale.sale_menu_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('email_to_crm.group_jb_sweet_user')])]"/>
    </record>

    <!-- Inherit the Purchase Root Menu -->
    <record id="purchase.menu_purchase_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('email_to_crm.group_jb_sweet_user')])]"/>
    </record>

    <!-- Inherit the Inventory Root Menu -->
    <record id="stock.menu_stock_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('email_to_crm.group_jb_sweet_user')])]"/>
    </record>

    <!-- Inherit the Stock Barcode Root Menu -->
    <record id="stock_barcode.stock_barcode_menu" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('email_to_crm.group_jb_sweet_user')])]"/>
    </record>
</odoo>